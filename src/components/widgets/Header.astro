---
import ToggleTheme from '~/components/core/ToggleTheme.astro';
import ToggleMenu from '~/components/core/ToggleMenu.astro';
import { Image } from '@astrojs/image/components';
import { getHomePermalink, getBlogPermalink, getPermalink, getRelativeLink } from '~/utils/permalinks';
---

<header class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 md:backdrop-blur-sm" id="header">
	<div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
		<div class="flex justify-between">
			<a class="flex items-center" href={getHomePermalink()}>
				<!-- <Logo /> -->
				<Image
					src={import('~/assets/images/kukarske_logo.jpg')}
					class="mx-auto rounded-md w-full"
					alt="Hero Image"
					loading="eager"
					width={190}
					height={95}
				/>
			</a>
			<div class="flex items-center md:hidden">
				<!-- <ToggleTheme /> -->
				<ToggleMenu />
			</div>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex text-gray-600 h-[calc(100vh-100px)] md:h-auto overflow-y-auto md:overflow-visible"
			aria-label="Main navigation"
		>
			<ul class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center w-full md:w-auto text-xl md:text-base">
				<li class="dropdown m-auto">
					<button
						class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
					>
						Aministracinė informacija
					</button>
					<ul
						class="dropdown-menu rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white md:min-w-[200px] drop-shadow-xl"
					>
						<li class="dropdown-item">
							<a class="rounded-t md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#"
								>Globos namų istorija</a
							>
						</li>
						<li class="dropdown-item">
							<a class="md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#"
								>Nuostatai, tvarkos ir taisyklės</a
							>
						</li>
						<li class="dropdown-item">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#">Licencijos</a>
						</li>
						<li class="dropdown-item">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#"
								>Biudžeto vykdymo ataskaitų rinkiniai</a
							>
						</li>
						<li class="dropdown-item">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#">Darbo užmokestis</a>
						</li>
						<li class="">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#"
								>Kokybės vadybos sistema</a
							>
						</li>
						<li class="dropdown-item">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#"
								>Europos socialinių paslaugų kokybė (Equass)</a
							>
						</li>
						<li class="dropdown-item">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#">Projektai</a>
						</li>
					</ul>
				</li>
				<li class="dropdown m-auto">
					<button
						class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
						>Struktūra ir kontaktai</button
					>
					<ul
						class="dropdown-menu rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white md:min-w-[200px] drop-shadow-xl"
					>
						<li class="dropdown-item">
							<a class="rounded-t md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#">Kontaktai</a>
						</li>
						<li class="">
							<a class="md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#">Struktūra</a>
						</li>
						<li class="">
							<a class="rounded-b md:hover:bg-gray-100 py-2 px-4 block whitespace-no-wrap" href="#">Vadovas</a>
						</li>
					</ul>
				</li>
				<li class="dropdown m-auto">
					<button
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						>Struktūra ir kontaktai</button
					>
					<ul
						class="dropdown-menu rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white md:min-w-[200px] dark:md:bg-slate-800 drop-shadow-xl"
					>
						<li class="m-auto">
							<a
								class="rounded-t md:hover:bg-gray-100 dark:hover:bg-gray-700 py-2 px-4 block whitespace-no-wrap"
								href="#">Features</a
							>
						</li>
						<li class="m-auto">
							<a class="md:hover:bg-gray-100 dark:hover:bg-gray-700 py-2 px-4 block whitespace-no-wrap" href="#"
								>Profile</a
							>
						</li>
						<li class="m-auto">
							<a
								class="rounded-b md:hover:bg-gray-100 dark:hover:bg-gray-700 py-2 px-4 block whitespace-no-wrap"
								href="#">Pricing</a
							>
						</li>
					</ul>
				</li>
				<li class="m-auto">
					<a
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Asmens duomenu apsauga
					</a>
				</li>
				<li class="m-auto">
					<a
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Korupcijos prevencija
					</a>
				</li>
				<li class="m-auto">
					<a
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Teisinė informacija
					</a>
				</li>
				<li class="m-auto">
					<a
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Dienoraštis
					</a>
				</li>
				<!-- <li>
					<a
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getBlogPermalink()}>Blog</a
					>
				</li> -->
			</ul>
		</nav>
	</div>
</header>
